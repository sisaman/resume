\renewcommand{\maketitle}{
  \begingroup % Begin a group to localize settings
  \hfil % Create horizontal fill to center the content
  {\LARGE\bf\@name} % Set the name size, bold, and italic style
  \hfil % Create horizontal fill to center the content
  \endgroup % End the group to revert localized 
  \par
  \medskip

  \begingroup % Begin a group to localize settings
  \hfil % Create horizontal fill to center the content
  \begin{tabular}{cccc}
    \faHome~\href{\@website}{\@website}                  &
    \faEnvelope~\href{mailto:\@email}{\@email} &
    \faPhone~\@phone                                                      &
    \faLocationArrow~\@location                                             \\
  \end{tabular}
  \hfil % Create horizontal fill to center the content
  \endgroup % End the group to revert localized 
  \par
  \medskip
}